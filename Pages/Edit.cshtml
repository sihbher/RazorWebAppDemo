@page "{idPlant:int}/{idOrder:int}/edit"
@model DispatcherWebApp.Pages.EditModel
@{
    ViewData["Title"] = "Edit Order";
}

<h1>Edit Order</h1>

<form method="post" class="form-horizontal">
    <div class="form-group row">
        <label class="control-label col-sm-2" for="idPlant">ID Plant:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Order.IDPlant" class="form-control" readonly/>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" for="idOrder">ID Order:</label>
        <div class="col-sm-10">
            <input asp-for="Order.IDOrder" class="form-control" readonly/>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" for="amount">Amount:</label>
        <div class="col-sm-10">
            <input asp-for="Order.Amount" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" for="price">Price:</label>
        <div class="col-sm-10">
            <input asp-for="Order.Price" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" for="dispatched">Dispatched:</label>
        <div class="col-sm-10">
            <div class="checkbox">
                <label>
                    <input asp-for="Order.Dispatched" />
                </label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" for="createdTimeStamp">Created Time Stamp:</label>
        <div class="col-sm-10">
            <input asp-for="Order.CreatedTimeStamp" class="form-control" readonly/>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-sm-2" for="lastUpdatedTimeStamp">Last Updated Time Stamp:</label>
        <div class="col-sm-10">
            <input asp-for="Order.LastUpdatedTimeStamp" class="form-control" readonly/>
        </div>
    </div>

<br/>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="./Details" asp-route-idPlant="@Model.Order.IDPlant" asp-route-idOrder="@Model.Order.IDOrder" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
