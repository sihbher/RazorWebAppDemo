@page "{idPlant:int}/{idOrder:int}"
@model DispatcherWebApp.Pages.DetailsModel


<h1>Order Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID Plant</th>
            <th>ID Order</th>
            <th>Amount</th>
            <th>Price</th>
            <th>Dispatched</th>
            <th>Created Time Stamp</th>
            <th>Last Updated Time Stamp</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Order.IDPlant</td>
            <td>@Model.Order.IDOrder</td>
            <td>@Model.Order.Amount</td>
            <td>@Model.Order.Price</td>
            <td>@Model.Order.Dispatched</td>
            <td>@Model.Order.CreatedTimeStamp</td>
            <td>@Model.Order.LastUpdatedTimeStamp</td>
        </tr>
    </tbody>
</table>
<div>
    @* <a asp-action="Edit" asp-route-idPlant="@Model.Order.IDPlant" asp-route-idOrder="@Model.Order.IDOrder">Edit</a> |
    <a asp-action="Index">Back to List</a> *@

    <a asp-page="Edit" asp-route-idPlant="@Model.Order.IDPlant" asp-route-idOrder="@Model.Order.IDOrder" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>
